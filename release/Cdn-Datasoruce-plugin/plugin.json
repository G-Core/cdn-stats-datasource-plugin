{
    "$schema": "https://raw.githubusercontent.com/grafana/grafana/master/docs/sources/developers/plugins/plugin.schema.json",
    "type": "datasource",
    "name": "cdn-stats",
    "id": "gcorelabs-cdn-stats-datasource",
    "metrics": true,
    "backend": true,
    "alerting": true,
    "executable": "gcore-cdn-stats-datasource",
    "info": {
        "description": "",
        "author": {
            "name": "G-Core",
            "url": "https://gcore.com/",
            "email": "support@gcore.com"
        },
        "keywords": [
            "cdn",
            "statistics"
        ],
        "logos": {
            "small": "img/logo-small.svg",
            "large": "img/logo-large.svg"
        },
        "links": [
            {
                "name": "Website",
                "url": "https://github.com/G-Core/cdn-stats-datasource-plugin"
            },
            {
                "name": "License",
                "url": "https://github.com/G-Core/cdn-stats-datasource-plugin/blob/master/LICENSE"
            }
        ],
        "screenshots": [],
        "version": "2.0.0",
        "updated": "2026-01-22"
    },
    "dependencies": {
        "grafanaDependency": ">=12.0.0",
        "plugins": []
    },
    "routes": [
        {
            "path": "statistics/aggregate/stats",
            "url": "https://{{if .JsonData.apiUrl }}{{ .JsonData.apiUrl }}{{else}}api.gcore.com{{end}}/cdn/statistics/aggregate/stats",
            "headers": [
                {
                    "name": "Authorization",
                    "content": "APIKey {{ .SecureJsonData.apiKey }}"
                }
            ]
        },
        {
            "path": "resources",
            "url": "https://{{if .JsonData.apiUrl }}{{ .JsonData.apiUrl }}{{else}}api.gcore.com{{end}}/cdn/resources",
            "headers": [
                {
                    "name": "Authorization",
                    "content": "APIKey {{ .SecureJsonData.apiKey }}"
                }
            ]
        },
        {
            "path": "users/me",
            "url": "https://{{if .JsonData.apiUrl}}{{ .JsonData.apiUrl }}{{else}}api.gcore.com{{end}}/users/me",
            "headers": [
                {
                    "name": "Authorization",
                    "content": "APIKey {{ .SecureJsonData.apiKey }}"
                }
            ]
        },
        {
            "path": "iam/users/me",
            "url": "https://{{if .JsonData.apiUrl}}{{ .JsonData.apiUrl }}{{else}}api.gcore.com{{end}}/iam/users/me",
            "headers": [
                {
                    "name": "Authorization",
                    "content": "APIKey {{ .SecureJsonData.apiKey }}"
                }
            ]
        }
    ],
    "buildMode": "production"
}